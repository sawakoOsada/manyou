<h2>登録済みのユーザー一覧</h2>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>登録日</th>
      <th>ステータス</th>
      <th>タスク数</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
      	<td><%= user.name %></td>
      	<td><%= user.created_at %></td>
        <td><% if user.admin? %>管理者<% else %>一般ユーザー<% end %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('.show'), admin_user_path(user.id) %></td>
        <td><%= link_to t('.edit'), edit_admin_user_path(user.id) %></td>
        <td><%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "delete_button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.create'), new_admin_user_path %>
