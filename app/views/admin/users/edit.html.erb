<%= form_with(model: @user, local: true, url: admin_user_path(@user)) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, id: '名前' %>
  <%= f.label :email %>
  <%= f.text_field :email, id: 'メールアドレス' %>
  <% if @user.admin? %>
    <%= f.radio_button :admin, :true, checked: true %>
    <%= f.label :admin, "管理者", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :admin, :false %>
    <%= f.label :admin, "一般ユーザー", {value: :false, style: "display: inline-block;"} %>
  <% else %>
    <%= f.radio_button :admin, :true %>
    <%= f.label :admin, "管理者", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :admin, :false, checked: true %>
    <%= f.label :admin, "一般ユーザー", {value: :false, style: "display: inline-block;"} %>
  <% end %>
  <%= f.submit '変更する' %>
<% end %>
