<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>
<p>ステータス: <% if @user.admin? %>管理者<% else %>一般ユーザー<% end %></p>
<table class="task_table table">
  <thead>
    <tr>
      <th><%= t '.name' %></th>
      <th><%= t '.content' %></th>
      <th><%= t '.deadline' %></th>
      <th><%= t '.state' %></th>
      <th><%= t '.priority' %></th>
      <th></th><th></th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr id="task_row">
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime("%Y/%m/%d %H:%M:%S")  %></td>
        <td><%= task.state %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t('.show'), task_path(task.id) %></td>
        <td><%= link_to t('.edit'), edit_task_path(task.id) %></td>
        <td><%= link_to t('.delete'), task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
