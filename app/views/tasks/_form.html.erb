<%= form_with(model: @task, local: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_name">
    <%= f.label :name %>
    <%= f.text_field :name, id: 'タスク名' %>
  </div>
  <div class="task_content">
    <%= f.label :content %>
    <%= f.text_field :content, id: 'タスク詳細' %>
  </div>
  <div class="task_deadline">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline, id: '終了期限' %>
  </div>
  <div class="task_state">
    <%= f.select :state, Task.states.keys.to_a %>
  </div>
  <%= f.submit %>
<% end %>
<%= link_to t('.task_index'), tasks_path %>
